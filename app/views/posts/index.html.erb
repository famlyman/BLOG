<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%#= render post %>
    <p>
      <%= link_to post.title, post %>
    </p>
    <p>
      <%= post.content.to_plain_text.truncate_words(5) %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
